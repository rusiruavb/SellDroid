<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Seller Login"
                android:textStyle="bold"
                android:textSize="36dp"
                android:textColor="@color/textColor"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/seller_login"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:hint="@string/email_seller_login"
                android:drawableStart="@drawable/ic_email"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:id="@+id/login_seller_email"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:hint="@string/password_seller_login"
                android:drawableStart="@drawable/ic_password"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:id="@+id/login_seller_password"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="LOGIN AS SELLER"
                android:textSize="18dp"
                android:background="@drawable/button_background"
                android:layout_margin="10dp"
                android:width="45dp"
                android:padding="15dp"
                android:id="@+id/login_seller_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create new Seller Account"
                android:padding="5dp"
                android:gravity="center"
                android:id="@+id/create_seller_account"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foget Password"
                android:padding="5dp"
                android:gravity="center"
                android:id="@+id/seller_foget_password"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
